<%- include ('header') -%>

<main class="contact-section">
    <% if(pageData.length){ %>
        <section class="contact-section-bg mb-5"
                 style="background-image: url(<%= pageData[0].imagesContactSlider[0] %>)">
            <div class="container">
                <h1 class="text-center">
                    <%= pageData[0].textContactSlider %>
                </h1>
            </div>
        </section>
    <% } %>
    <section class="py-5 my-5 contact-form">
        <div class="container ">
            <div class="row  align-items-center">
                <div class="col-12 col-md-8 py-3 py-md-5 p-3 p-md-4 p-xl-5 btn-green-gradient">
                    <%- include ('partials/messages') %>
                    <form action="/sendMessageContactUs" method="POST" id="contactForm" class="py-5 mx-auto"
                          style="max-width: 50%">
                        <div class="form-group">
                            <label for="exampleInputEmail1">
                                <%= staticData.contact_email %>
                            </label>
                            <input value="" name="email" required type="email" class="form-control"
                                   id="emailContactUs" aria-describedby="emailHelp"
                                   placeholder="<%= staticData.contact_email %>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInput"><%= staticData.contact_first_name %></label>
                            <input value="" name="firstName" required minlength="3"
                                   type="text" class="form-control"
                                   id="firstNameContactUs"
                                   placeholder="<%= staticData.contact_first_name %>">
                        </div>
                        <div class="form-group d-flex flex-column">
                            <label><%= staticData.contact_message %></label>
                            <textarea value="" required name="message"
                                      id="messageContactUs" rows="6"
                                      class="form-control" placeholder="<%= staticData.contact_message %>"></textarea>
                        </div>
                        <button id="sendMessageContactUs" type="submit"
                                class="btn btn-rose px-4 px-3 d-flex ml-auto"><%= staticData.contact_button %></button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>
<%- include ('footer') -%>

<!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    <script src="js/jquery.js"></script>
<script src="js/bootstrap/bootstrap.min.js"></script>
<script src="js/owl.carousel.min.js"></script>
<script>
    $(document).ready(function () {
        $(".owl-carousel-about").owlCarousel({
            autoplay: true,
            lazyLoad: true,
            loop: true,
            responsiveClass: true,
            autoHeight: true,
            autoplayTimeout: 7000,
            smartSpeed: 800,
            dots: true,
            nav: false,
            items: 1,
        });
    });
</script>
<script src="js/script.js"></script>
</body>
</html>


