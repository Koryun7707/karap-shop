<%- include ('header') -%>

<main  style="padding-top: 100px" class="selected-product-section">
    <div class="container container-1730 my-5">
        <h2 class="my-4"><b>Selected Products</b></h2>
        <div class="shop-check d-flex ml-3">
            <div class="form-group mr-2">
                <input type="checkbox" id="select-all">
                <label for="select-all" class="">Select All</label>
            </div>
        </div>
        <div class="row">
            <div id="shoppingCardDiv" class="col-12 col-md-8 col-lg-9">


            </div>
            <div class="col-12 col-md-4 col-lg-3">
                <div class="total-section pt-5">
                    <div class="mb-3 d-flex justify-content-between">
                        <h2 class="title"><b>TOTAL</b></h2>
                        <div class="product-price">
                            <h2 id="total" style="color: #065a1f"><b>0 </b></h2>
                        </div>
                    </div>
                    <div class="mb-3 d-flex justify-content-between">
                        <div>Sale</div>
                        <div>-30%</div>
                    </div>
                    <div class="mb-3 d-flex justify-content-between">
                        <div>Delivery</div>
                        <div>500 dram</div>
                    </div>
                    <div class="mb-3 d-flex justify-content-between">
                        <div>Date</div>
                        <div>21-23 of january</div>
                    </div>
                    <div class="my-4">
                        <a href="/shipping" class="btn btn-green-gradient mb-3" style="font-size: 20px; color: #fff; text-transform: capitalize">Pay  for order</a>
                        <div class="shop-check d-flex justify-content-center">
                            <div class="form-group mr-2">
                                <input type="checkbox" id="agreement">
                                <label for="agreement" class="">I agree with <a href="#">Terms & conditions </a></label>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</main>
<%- include ('footer') -%>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="js/jquery.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script>
    $( function() {
        $( "#slider-range" ).slider({
            range: true,
            min: 0,
            max: 500,
            values: [ 75, 300 ],
            slide: function( event, ui ) {
                $( "#amount" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
            }
        });
        $( "#amount" ).val( "$" + $( "#slider-range" ).slider( "values", 0 ) +
            " - $" + $( "#slider-range" ).slider( "values", 1 ) );
    } );
</script>
<script src="js/bootstrap/bootstrap.min.js"></script>
<script src="js/owl.carousel.min.js"></script>
<script src="js/script.js"></script>
<script>
    const shoppingCard = JSON.parse(localStorage.getItem('shoppingCard'));
    console.log(shoppingCard)
    let currentDiv = document.getElementById('shoppingCardDiv');
    let array =[]
    shoppingCard.forEach((item)=>{
        array.push(item.productId)
    })
    $.ajax({
        type: 'post',
        url: '/product-by-id',
        data: {shoppingCard:array},
        success: (response) => {
            if(response.results.length){
                response.results.forEach(function(item){
                    let newDiv = document.createElement('div');
                    currentDiv.append(newDiv);
                    newDiv.setAttribute('class', 'selected-product-cart');
                    newDiv.id = item._id;
                    newDiv.innerHTML = `
                    <div  class="shop-check d-flex">
                        <div class="form-group mr-2">
                            <input onclick="checkFluency(this)" type="checkbox" id="${item.name}" value="${item.price}">
                            <label for="${item.name}" class=""></label>
                        </div>
                        <div class="img-area mr-3">
                            <img src="${item.images[0]}" alt="" class="w-100">
                        </div>
                        <div>
                            <div class="product-name">${item.name}</div>
                            <div class="product-color my-2">${shoppingCard[shoppingCard.findIndex(x => x.productId == `${item._id}`)].color}</div>
                            <div id='div1' class="product-size">${shoppingCard[shoppingCard.findIndex(x => x.productId == `${item._id}`)].size || ''}</div>
                        </div>
                    </div>

                    <div class="product-count">
                        <div class="qtySelector text-center">
                            <i class="fa fa-minus decreaseQty"></i>
                            <input type="text" class="qtyValue" value="${shoppingCard[shoppingCard.findIndex(x => x.productId == `${item._id}`)].count}" />
                            <i class="fa fa-plus increaseQty"></i>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="product-price">${item.price} dram</div>
                    </div>
                     <div class="d-flex justify-content-end">
                        <button value="${item._id}" class="btn btn-danger" onclick="deleteProduct(this)" type="submit">Delete</button>
                    </div>

               `
                })
            }
        },
        error: (e) => {
            console.log(e)
        }
    })
    function checkFluency(){
        if ($('input[type=checkbox]').is(':checked')) {
            var values = [];
            $.each($('input:checked'), function (index, input) {
                values.push(Number(input.value));
            });

            if (values.length) {
                document.getElementById('total').innerHTML = values.reduce((a, b) => a + b);
            }
        }
        else {
            document.getElementById('total').innerHTML = '0';
        }
    }
    function deleteProduct(button){
        document.getElementById(button.value).remove();
        let local = JSON.parse(localStorage.getItem('shoppingCard'));
        local = local.filter(item=>item.productId!=button.value);
        localStorage.setItem('shoppingCard',JSON.stringify(local));
    }

</script>

</body>
</html>