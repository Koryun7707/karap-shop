<%- include ('adminHeader') -%>
<div class="row">
    <div class="col-8 offset-2">
        <form method="post" enctype="multipart/form-data"  action="admin-brand" class="py-5">
            <div class="row page-titles">Brands</div>
            <div class="form-group">
                <label for="exampleInputEmail1">Text on brands general image</label>
                <input type="text" name="textBrandSlider" class="form-control" id="exampleInputEmail1" placeholder="Text on general image.">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Upload brands page general image.</label>
                <input type="file" name="imagesBrandSlider" class="form-control" id="uploadImagesBySize">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Language</label>
                <select name="language">
                    <option name="spain" value="spain" selected>Spain</option>
                    <option name="eng" value="eng">Eng</option>
                    <option name="ru" value="ru">Ru</option>
                </select>
            </div>
            <button type="submit" class="btn btn-rose px-4 px-3 d-flex ml-auto">Save</button>
        </form>
    </div>
</div>
<%- include ('adminFooter') -%>
