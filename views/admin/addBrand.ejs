<%- include ('adminHeader') -%>
<div class="row">
    <div class="col-8 offset-2">
        <form method="post" enctype="multipart/form-data"  action="brand"  class="py-5">
            <div class="row page-titles">Add brand</div>
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" class="form-control" name="brandName" id="exampleInputEmail1"
                       placeholder="Brand name.">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Type</label>
                <input type="text" class="form-control" name="brandType" id="exampleInputEmail1"
                       placeholder="Brand type.">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">hTag</label>
                <input type="text" class="form-control" name="brandHashTag" id="exampleInputEmail1"
                       placeholder="Brand hash/tag.">
            </div>
            <div class="form-group d-flex flex-column">
                <label>Info</label>
                <textarea name="brandInfo" id="" rows="6" class="form-control"
                          placeholder="Some info about brand."></textarea>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Upload brand logo, and three size images sm1/sm2/sm3(First choosen must be logo.)</label>
                <input type="file" name="brandImages" multiple="multiple" class="form-control" id="uploadImagesBySize">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Language</label>
                <select name="language">
                    <option name="spain" value="spain" selected>Spain</option>
                    <option name="eng" value="eng">Eng</option>
                    <option name="ru" value="ru">Ru</option>
                </select>
            </div>
            <button type="submit" class="btn btn-rose px-4 px-3 d-flex ml-auto">Save</button>
        </form>
    </div>
</div>
<%- include ('adminFooter') -%>
